<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.geekbrains.myweatherapplicatinons">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    
    <application
        android:name=".framework.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyWeatherApplicatinons">
        <activity android:name="com.geekbrains.myweatherapplicatinons.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--Обзательно надо прописать сервисы в манифесте-->
        <service android:name=".experiment.services.MyForegroundService"
            android:foregroundServiceType="location"
            android:enabled="true"/>

        <service android:name=".experiment.services.ServiceWithThread"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:enabled="true"/>

        <service android:name=".experiment.services.UsualService"
            android:enabled="true"/>

        <!--Прописываем ресивер и указываем к нему фильтр-->
        <receiver android:name=".framework.broadcast.MainBroadcastReceiver">
            <intent-filter>
                <!-- Когда меняем язык будет срабатывать ресивер-->
                <action android:name="android.intent.action.LOCALE_CHANGED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>